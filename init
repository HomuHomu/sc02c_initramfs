#!/sbin/busybox sh

PATH_=$PATH
export PATH=/sbin

# extract block device files
tar xf /misc/dev.tar

mount -t proc proc /proc
RECOVERY_MODE=`grep -c bootmode=2 /proc/cmdline`
umount /proc

#foce single boot mode
BOOT_MODE=0

if [ "$BOOT_MODE" = '0' ]; then
  #single boot mode
  mkdir /system
  mkdir /data
else
  #mbs mode
  mkdir /xdata
fi

if [ "$RECOVERY_MODE" = '1' ]; then
  # recovery mode
  sh /mbs/init.recovery.sh
else
	if [ "$BOOT_MODE" = '0' ]; then
	  sh /mbs/init.normal.sh
	else
	  sh /mbs/init.normal.sh
	fi
fi

# cleanup
rm -rf /dev/* /misc/dev.tar

# init start
mv /_init /init

export PATH=$PATH_
exec /init

