#!/sbin/busybox sh

PATH_=$PATH
export PATH=/sbin

# extract block device files
tar xf /misc/dev.tar

mount -t proc proc /proc
RECOVERY_MODE=`grep -c bootmode=2 /proc/cmdline`
umount /proc

#foce single boot mode
IS_MODE=0

#check multi mode
if [ "$IS_MODE" = '0' ]; then
  #single boot mode
  mkdir /system
  mkdir /data
  chmod 0771 /data
  RECOVERY_SH=/mbs/init.recovery.sh
  NORMAL_SH=/mbs/init.normal.sh
else
  #mbs mode
  mkdir /xdata
  RECOVERY_SH=/mbs/init.recovery.multi.sh
  NORMAL_SH=/mbs/init.normal.multi.sh
fi

#check boot mode
if [ "$RECOVERY_MODE" = '1' ]; then
  # recovery mode
  sh $RECOVERY_SH
else
  sh $NORMAL_SH
fi

# cleanup
rm -rf /dev/* /misc/dev.tar

# init start
mv /_init /init

export PATH=$PATH_
exec /init

